    # Get base workout from weekly plan
    weekly_plan = generate_matching_weekly_plan(plan_type, form_data.get('plan_type', [''])[0])
    today_plan = next((day for day in weekly_plan if day['day'] == day_name[:3]), None)
    
    if not today_plan:
