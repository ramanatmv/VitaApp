@app.route('/', methods=['GET', 'POST'])
def index():
    message = ""
    report_html = "" # Changed back to report_html
    
    today_hours, tomorrow_hours = get_current_and_future_hours()
    now = datetime.now()
    current_hour = now.hour
    
    default_today_start = f"{current_hour + 1:02d}:00" if current_hour < 20 else ""
    default_today_end = f"{min(23, current_hour + 5):02d}:00" if current_hour < 20 else ""
    default_tomorrow_start = "06:00"
    default_tomorrow_end = "10:00"
    
    if request.method == 'POST':
        # (Form processing logic is the same)
        city = request.form['city']
        today_start, today_end = request.form.get('today_start', ''), request.form.get('today_end', '')
        tomorrow_start, tomorrow_end = request.form.get('tomorrow_start', ''), request.form.get('tomorrow_end', '')
        email, action = request.form['email'], request.form['action']

        # (Validation logic is the same)
        # ...

        try:
            if action == 'get_forecast':
                report_html = run_agent_workflow(
                    city=city, today_start=today_start, today_end=today_end,
                    tomorrow_start=tomorrow_start, tomorrow_end=tomorrow_end,
                    output_format="compact_html"  # CHANGED
                )
                message = "Forecast generated!"
            
            elif action == 'email_now':
                report_html = run_agent_workflow(
                    city=city, today_start=today_start, today_end=today_end,
                    tomorrow_start=tomorrow_start, tomorrow_end=tomorrow_end,
                    output_format="compact_html"  # CHANGED
                )
                subject = f"Your Instant Running Forecast for {city}"
                email_body = f"<!DOCTYPE html><html><body>{report_html}</body></html>"
                send_email_notification(email, subject, email_body, is_html=True) # CHANGED back to True
                message = f"Forecast sent to {email}!"
                
            elif action == 'schedule':
                schedule_time = request.form['schedule_time']
                message = schedule_daily_email_report.invoke({
                    "city": city, "today_start": today_start, "today_end": today_end,
                    "tomorrow_start": tomorrow_start, "tomorrow_end": tomorrow_end,
                    "recipient_email": email, "scheduled_time": schedule_time
                })
        except Exception as e:
            message = f"Error: {str(e)}"

    return render_template_string(
        HTML_TEMPLATE, message=message, report_html=report_html, # CHANGED back to report_html
        today_hours=today_hours, tomorrow_hours=tomorrow_hours,
        default_today_start=default_today_start, default_today_end=default_today_end,
        default_tomorrow_start=default_tomorrow_start, default_tomorrow_end=default_tomorrow_end
    )

if __name__ == '__main__':
    # Start the scheduler in a background thread
    scheduler_thread = threading.Thread(target=run_scheduler, daemon=True)
    scheduler_thread.start()
    
    # Run the Flask app
    app.run(debug=True, port=5000)

